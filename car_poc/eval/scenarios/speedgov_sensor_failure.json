{
  "seed": 22,
  "duration_ms": 7000,
  "tick_ms": 10,
  "initial_state": { "speed_kph": 45, "outside_temp_c": 25 },
  "stimuli": [
    { "t_ms": 1000, "type": "sensor_failure", "sensor": "speed", "count": 3 },
    { "t_ms": 2000, "type": "sensor_stale", "sensor": "speed", "duration_ms": 150 },
    { "t_ms": 4000, "type": "sensor_recovery", "sensor": "speed", "valid_reads": 5 }
  ],
  "assertions": [
    { "metric": "speedgov.dtc_raised_on_failure", "op": "==", "value": 1 },
    { "metric": "speedgov.dtc_cleared_on_recovery", "op": "==", "value": 1 },
    { "metric": "speedgov.stale_data_ignored", "op": "==", "value": 1 },
    { "metric": "speedgov.alarm_hold_during_failure", "op": "==", "value": 1 }
  ]
}