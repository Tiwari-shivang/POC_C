{
  "seed": 20,
  "duration_ms": 8000,
  "tick_ms": 10,
  "initial_state": { "speed_kph": 45, "outside_temp_c": 25 },
  "stimuli": [
    { "t_ms": 1000, "type": "vehicle_speed", "value": 52 },
    { "t_ms": 3000, "type": "vehicle_speed", "value": 46 },
