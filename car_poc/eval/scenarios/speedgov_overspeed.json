  "assertions": [
    { "metric": "speedgov.overspeed_alarm_latency_ms", "op": "<=", "value": 200 },
    { "metric": "speedgov.alarm_clear_hysteresis_correct", "op": "==", "value": 1 },
    { "metric": "speedgov.consecutive_sample_debounce", "op": "==", "value": 1 }
  ]
}